<Window x:Class="WpfApp1_TaskHandler.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_TaskHandler"
        mc:Ignorable="d"
        Title="AddEditTaskWindow" Height="200" Width="300">
    <Grid>
        <Label Content="Task Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="taskNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,10,10,0" Width="150"/>

        <Label Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>
        <TextBox Name="descriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,40,10,0" Width="150" Height="80"/>

        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="75" Click="Save_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" Click="Cancel_Click"/>
    </Grid>
</Window>
